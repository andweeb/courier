{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-prettier"
    ],
    "rules": {
        "prettier": [
            true,
            {
                "tabWidth": 4,
                "trailingComma": "all",
                "bracketSpacing": false,
                "singleQuote": true
            }
        ]
    },
    "rulesDirectory": [
        "tslint-plugin-prettier"
    ]
}
